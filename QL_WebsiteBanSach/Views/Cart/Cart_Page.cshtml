@model IEnumerable<QL_WebsiteBanSach.Models.CartModel>

@{
	ViewBag.Title = "Giỏ Hàng";
	Layout = "~/Views/Shared/Main_Layout_Page.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
	<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
		<h1 class="font-weight-semi-bold text-uppercase mb-3">Giỏ Hàng Mua Sắm</h1>
		<div class="d-inline-flex">
			<p class="m-0"><a href="@Url.Action("Index", "Home")">Về Trang Chủ</a></p>
			<p class="m-0 px-2">-</p>
			<p class="m-0">Giỏ Hàng</p>
		</div>
	</div>
</div>
<!-- Page Header End -->
<!-- Cart Start -->
<div class="container-fluid pt-5">
	<div class="row px-xl-5">
		<div class="col-lg-8 table-responsive mb-5">
			<table class="table table-bordered text-center mb-0">
				<thead class="bg-secondary text-dark">
					<tr>
						<th>Hình Ảnh</th>
						<th>Sách</th>
						<th>Giá Bán</th>
						<th>Số Lượng</th>
						<th>Thành Tiền</th>
						<th>Xóa</th>
					</tr>
				</thead>
				<tbody class="align-middle">
					@{
						foreach (var item in Model)
						{
							using (Html.BeginForm("Update_Cart", "Cart", new { id = item.MaSach }))
							{
								<tr>
									<td class="align-middle"><img src="~/Images/@item.AnhBia" alt="@item.AnhBia" style="width:50px;"></td>
									<td class="align-middle">@item.TenSach</td>
									<td class="align-middle">@item.GiaBan VNĐ</td>
									<td class="align-middle">
										<div class="input-group quantity mx-auto" style="width: 100px;" type="submit">
											<div class="input-group-btn">
												<button class="btn btn-sm btn-primary btn-minus">
													<i class="fa fa-minus"></i>
												</button>
											</div>
											<input type="text" class="form-control form-control-sm bg-secondary text-center" value="@item.SoLuong" name="quantity">
											<div class="input-group-btn">
												<button class="btn btn-sm btn-primary btn-plus">
													<i class="fa fa-plus"></i>
												</button>
											</div>
										</div>
									</td>
									<td class="align-middle">@item.ThanhTien</td>
									<td class="align-middle"><a class="btn btn-sm btn-primary" href="@Url.Action("Delete_Cart", "Cart", new { id = item.MaSach })"><i class="fa fa-times"></i></a></td>
								</tr>
							}
						}
					}
				</tbody>
			</table>
		</div>
		<div class="col-lg-4">
			<div class="card border-secondary mb-5">
				<div class="card-header bg-secondary border-0">
					<h4 class="font-weight-semi-bold m-0">Thống Kê Đơn Hàng</h4>
				</div>
				<div class="card-body">
					<div class="d-flex justify-content-between mb-3 pt-1">
						<h6 class="font-weight-medium">Tổng Số Lượng</h6>
						<h6 class="font-weight-medium">@ViewBag.TotalQuantity</h6>
					</div>
					<div class="d-flex justify-content-between">
						<h6 class="font-weight-medium">Phí Giao Hàng</h6>
						<h6 class="font-weight-medium">0 VNĐ</h6>
					</div>
				</div>
				<div class="card-footer border-secondary bg-transparent">
					<div class="d-flex justify-content-between mt-2">
						<h5 class="font-weight-bold">Tổng Tiền</h5>
						<h5 class="font-weight-bold">@ViewBag.TotalMoney</h5>
					</div>
					<a href="#" class="btn btn-block btn-primary my-3 py-3">Thanh Toán</a>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Cart End -->
