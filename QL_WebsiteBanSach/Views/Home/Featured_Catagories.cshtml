@model IEnumerable<QL_WebsiteBanSach.Models.tbl_TheLoai>

<div class="container-fluid pt-5">
	<div class="text-center mb-4">
		<h2 class="section-title px-5"><span class="px-2">Thể Loại Hay</span></h2>
	</div>
	<div class="row px-xl-5 pb-3">
		@{
			foreach (var item in Model)
			{
				<div class="col-lg-3 col-md-6 pb-1">
					<div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
						<p class="text-right">@item.tbl_TacPham.Count()</p>
						<a href="@Url.Action("Catagorized_Books", "Library", new {id = item.MaTheLoai })" class="cat-img position-relative overflow-hidden mb-3">
							<h5 class="font-weight-semi-bold m-0">@item.TenTheLoai</h5>
						</a>
					</div>
				</div>
			}
		}
	</div>
</div>


