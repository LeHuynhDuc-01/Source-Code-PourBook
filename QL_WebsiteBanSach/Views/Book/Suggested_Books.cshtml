@model IEnumerable<QL_WebsiteBanSach.Models.tbl_ChiTietSach>

<div class="container-fluid py-5">
	<div class="text-center mb-4">
		<h2 class="section-title px-5"><span class="px-2">Có Thể Bạn Sẽ Thích</span></h2>
	</div>
	<div class="row px-xl-5">
		<div class="col">
			<div class="owl-carousel related-carousel">
				@{
					foreach (var item in Model)
					{
						<div class="card product-item border-0">
							<div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
								<img class="img-fluid w-100" src="~/Images/@item.AnhBia" alt="@item.AnhBia" style="height:500px">
							</div>
							<div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
								<h6 class="text-truncate mb-3">@item.TenSach</h6>
								<div class="d-flex justify-content-center">
									<h6>@item.GiaBan VNĐ</h6>
								</div>
							</div>
							<div class="card-footer d-flex justify-content-between bg-light border">
								<a href="@Url.Action("Book_Details", "Book", new { id = item.MaSach })" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem Thêm</a>
								<a href="@Url.Action("Add_Cart", "Cart", new {id = item.MaSach, url = Request.Url.ToString()})" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Mua Ngay</a>
							</div>
						</div>
					}
				}
			</div>
		</div>
	</div>
</div>
